<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        body {
            display: flex;
            align-items: center;
            flex-direction: column;
        }

        .recipe {
            width: 60%;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);
            padding: 20px;
            margin: 20px;
        }
    </style>
</head>

<body>
    <nav>
        <a href="/newrecipe">
            <p class="nav-item">New Recipe</p>
        </a>
    </nav>

    <% for(var i=0; i < recipes.length; i++) { %>
        <div class="recipe">
            <h2 class="title">
                <%- recipes[i].title %>
            </h2>
            <p class="body">
                <%- recipes[i].body %>
            </p>
            <p class="date">
                <%- recipes[i].date %>
            </p>
            <form action="/deletepost/<%- recipes[i].id %>" method="POST">
                <input type="submit" value="DELETE">
            </form>
        </div>
        <% } %>
</body>

</html>